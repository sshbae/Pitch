<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/display_group_name_tv"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginStart="0.0dp"
        android:layout_marginLeft="0.0dp"
        android:layout_marginEnd="0.0dp"
        android:layout_marginRight="0.0dp"
        android:gravity="center"
        android:text="Group Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/make_purchase_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0.0dp"
        android:layout_marginRight="0.0dp"
        android:layout_marginBottom="0.0dp"
        android:clickable="true"
        app:backgroundTint="#19FFFFFF"
        app:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/pitch_logo"
        app:useCompatPadding="true" />

    <LinearLayout
        android:id="@+id/group_page_layout"
        android:layout_width="match_parent"
        android:layout_height="656dp"
        android:layout_marginStart="0.0dp"
        android:layout_marginLeft="0.0dp"
        android:layout_marginTop="0.0dp"
        android:layout_marginBottom="0.0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
